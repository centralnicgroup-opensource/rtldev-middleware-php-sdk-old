{
	"name": "hexonet/php-sdk",
	"type": "library",
	"description": "API connector library for the insanely fast HEXONET backend API",
	"keywords": [
		"SDK",
		"api",
		"connector",
		"hexonet",
		"domain",
		"ssl",
		"domain",
		"isp",
		"ispapi",
		"cert",
		"dns",
		"backorder",
		"premium",
		"preregistration",
		"registration",
		"application"
	],
	"homepage": "https://github.com/hexonet/php-sdk",
	"readme": "README.md",
	"license": "MIT",
	"authors": [
		{
			"name": "Anthony Schneider",
			"email": "anthonys@hexonet.net",
			"homepage": "https://hexonet.net",
			"role": "Developer"
		},
		{
			"name": "Kai Schwarz",
			"email": "kschwarz@hexonet.net",
			"homepage": "https://hexonet.net",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.0.0"
	},
	"autoload": {
		"psr-4": {
			"HEXONET\\": "src/"
		},
		"classmap": ["src/"]
	},
	"require-dev": {
		"phpunit/phpunit": "^7",
		"squizlabs/php_codesniffer": "^3.3",
		"php-mock/php-mock-phpunit": "^2.1"
	},
	"scripts": {
		"docs": "phpDocumentor.phar",
		"phar": "box build ./src",
		"cs": "./vendor/bin/phpcs --standard=PSR2 -n src",
        "cbf": "./vendor/bin/phpcbf --standard=PSR2 -n src",
        "unit": "./vendor/bin/phpunit",
        "test": [
            "@unit",
			"@cbf",
			"@cs"
        ]
	}
}
