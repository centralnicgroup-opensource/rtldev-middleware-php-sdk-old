{
  "name": "php-sdk",
  "description": "PHP SDK for the insanely fast HEXONET API",
  "version": "0.0.0-development",
  "private": true,
  "author": {
    "name": "Kai Schwarz",
    "email": "kschwarz@hexonet.net"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.3.0"
  },
  "homepage": "https://github.com/hexonet/php-sdk",
  "repository": "github:hexonet/php-sdk",
  "bugs": "https://github.com/hexonet/php-sdk/issues",
  "maintainers": [
    {
      "name": "Kai Schwarz",
      "email": "kschwarz@hexonet.net"
    }
  ],
  "keywords": [
    "hexonet",
    "domain",
    "api",
    "connector",
    "isp",
    "ispapi",
    "ssl",
    "cert",
    "dns",
    "backorder",
    "premium",
    "preregistration",
    "registration",
    "application"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/commit-analyzer": "6.2.0",
    "@semantic-release/exec": "3.3.4",
    "@semantic-release/git": "7.0.13",
    "@semantic-release/github": "5.4.0",
    "conventional-changelog": "3.1.8",
    "semantic-release": "^15.13.18"
  },
  "release": {
    "debug": false,
    "analyzeCommits": {
      "preset": "angular"
    },
    "generateNotes": {
      "preset": "angular"
    },
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "HISTORY.md"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "./updateVersion.sh ${nextRelease.version} ${options.branch}"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "HISTORY.md",
          "package.json",
          "package-lock.json",
          "npm-shrinkwrap.json",
          "composer.json",
          "composer.lock",
          "build",
          "report",
          "src/APIClient.php"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/github"
    ]
  }
}
